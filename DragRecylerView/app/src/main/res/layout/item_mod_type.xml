<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="120dp"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:padding="16dp">

    <ImageView
        android:id="@+id/iv_modtype"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:background="@null"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"

        android:src="@drawable/selector_sensor_light"/>
    <LinearLayout
        android:id="@+id/layout_online"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/iv_modtype"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="-6dp"
        android:orientation="horizontal"
        >
        <TextView
            android:id="@+id/tv_online"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:textColor="@color/item_modtype_text"
            android:textSize="@dimen/sensorlist_text" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="/"
            android:textColor="@color/item_modtype_text"
            android:textSize="@dimen/sensorlist_text" />

        <TextView
            android:id="@+id/tv_all_online"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3"
            android:textColor="@color/item_modtype_text"
            android:textSize="@dimen/sensorlist_text" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_modtype_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/layout_online"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:singleLine="true"
        android:ellipsize="marquee"
        android:text="RGB"
        android:textColor="@color/item_modtype_text"
        android:textSize="@dimen/sensorlist_text" />
</RelativeLayout>